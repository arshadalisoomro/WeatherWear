<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:id="@+id/shirtButton"
            android:src="@drawable/shirticon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="30dip"
            android:layout_alignParentTop="true"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/bottomsButton"
            android:src="@drawable/bottomsicon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dip"
            android:layout_marginRight="30dip"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/dressButton"
            android:src="@drawable/dressicon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/outerwearButton"
            android:src="@drawable/outerwearicon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dip"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/shoesButton"
            android:src="@drawable/shoeicon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="30dip"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

        <at.markushi.ui.CircleButton
            android:id="@+id/accessoriesButton"
            android:src="@drawable/accessoryicon"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dip"
            android:layout_marginRight="30dip"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="8dip"/>

</RelativeLayout>