<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zigzag">

    <at.markushi.ui.CircleButton
        android:id="@+id/sneakers"
        android:src="@drawable/sneakersicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="30dip"
        android:layout_alignParentTop="true"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/sandals"
        android:src="@drawable/sandalsicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dip"
        android:layout_marginRight="30dip"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/boots"
        android:src="@drawable/bootsicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/rain_boots"
        android:src="@drawable/rainbootsicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dip"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/snow_boots"
        android:src="@drawable/snowbootsicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="30dip"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

    <at.markushi.ui.CircleButton
        android:id="@+id/heels"
        android:src="@drawable/heelsicon"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dip"
        android:layout_marginRight="30dip"
        app:cb_color="@color/colorPrimaryDark"
        app:cb_pressedRingWidth="8dip"
        android:onClick="showCategory"/>

</RelativeLayout>