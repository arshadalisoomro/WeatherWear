<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/high"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outfit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/low"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="end"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/outfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/top_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <at.markushi.ui.CircleButton
                android:id="@+id/top_back"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back"
                app:cb_color="@color/colorPrimaryDark"
                app:cb_pressedRingWidth="8dip"/>

            <ImageView
                android:id="@+id/top_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <requestFocus/>
            </ImageView>

            <at.markushi.ui.CircleButton
                android:id="@+id/top_forward"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:src="@drawable/forward"
                app:cb_color="@color/colorPrimaryDark"
                app:cb_pressedRingWidth="8dip"/>
        </LinearLayout>

            <TextView
                android:id="@+id/bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bottom"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/bottom_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <at.markushi.ui.CircleButton
                    android:id="@+id/bottom_back"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>

                <ImageView
                    android:id="@+id/bottom_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus/>
                </ImageView>

                <at.markushi.ui.CircleButton
                    android:id="@+id/bottom_forward"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/forward"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dress"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/dress_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <at.markushi.ui.CircleButton
                    android:id="@+id/dress_back"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>

                <ImageView
                    android:id="@+id/dress_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus/>
                </ImageView>

                <at.markushi.ui.CircleButton
                    android:id="@+id/dress_forward"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/forward"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/shoes_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <at.markushi.ui.CircleButton
                    android:id="@+id/shoes_back"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>

                <ImageView
                    android:id="@+id/shoes_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus/>
                </ImageView>

                <at.markushi.ui.CircleButton
                    android:id="@+id/shoes_forward"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/forward"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/outerwear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outerwear"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/outerwear_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone">

                <at.markushi.ui.CircleButton
                    android:id="@+id/outerwear_back"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>

                <ImageView
                    android:id="@+id/outerwear_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus/>
                </ImageView>

                <at.markushi.ui.CircleButton
                    android:id="@+id/outerwear_forward"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/forward"
                    app:cb_color="@color/colorPrimaryDark"
                    app:cb_pressedRingWidth="8dip"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>